{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "outputLogs": "new-only"
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "interactive": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "lint:fix": {},
    "//#lint:root": {
      "outputLogs": "new-only"
    },
    "//#lint:root:fix": {},
    "types": {
      "dependsOn": ["^build"],
      "outputs": ["tsconfig.tsbuildinfo", ".cache/tsbuildinfo.json"],
      "outputLogs": "new-only"
    },
    "//#format": {
      "outputs": ["node_modules/.cache/prettier/**"]
    },
    "//#format:fix": { "cache": false },
    "env-pull": {
      "dependsOn": ["//#env-link"],
      "cache": false
    },
    "//#env-link": {
      "inputs": ["./.vercel/*"],
      "outputs": ["./.vercel/repo.json"]
    }
  },
  "globalPassThroughEnv": [
    "VERCEL_URL",
    "NODE_OPTIONS",
    "FORCE_COLOR",

    "PAYLOAD_SECRET",
    "TURSO_DATABASE_URL",
    "TURSO_AUTH_TOKEN",

    "PAYLOAD_URL"
  ]
}
